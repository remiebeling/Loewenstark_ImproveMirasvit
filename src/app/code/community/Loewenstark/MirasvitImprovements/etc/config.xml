<?xml version="1.0"?><config>    <modules>        <Loewenstark_MirasvitImprovements>            <version>0.0.1</version>        </Loewenstark_MirasvitImprovements>    </modules>    <global>        <helpers>            <mirasvit_improvements>                <class>Loewenstark_MirasvitImprovements_Helper</class>            </mirasvit_improvements>        </helpers>        <models>            <mirasvit_improvements>                <class>Loewenstark_MirasvitImprovements_Model</class>            </mirasvit_improvements>        </models>        <blocks>            <mirasvit_improvements>                <class>Loewenstark_MirasvitImprovements_Block</class>            </mirasvit_improvements>        </blocks>    </global>    <frontend>         <layout>            <updates>                <mirasvit_improvements>                    <file>loewenstark-improvemirasvit.xml</file>                </mirasvit_improvements>            </updates>        </layout>        <routers>            <mirasvit_improvements>                <use>standard</use>                <args>                    <module>Loewenstark_MirasvitImprovements</module>                    <frontName>searchtocart</frontName>                </args>            </mirasvit_improvements>        </routers>        <translate>            <modules>                <Loewenstark_MirasvitImprovements>                    <files>                        <default>Loewenstark_MirasvitImprovements.csv</default>                    </files>                </Loewenstark_MirasvitImprovements>            </modules>        </translate>    </frontend></config>